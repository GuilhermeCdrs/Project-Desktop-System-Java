  <persistence-unit name="AndreNP2PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>Classes.Vendas</class>
    <class>Classes.Fornecedores</class>
    <class>Classes.Clientes</class>
    <class>Classes.EstoqueSaldo</class>
    <class>Classes.ItensVenda</class>
    <class>Classes.CabecalhoVendas</class>
    <class>Classes.Produtos</class>
    <class>Classes.Iner</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/extra?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
    </properties>
  </persistence-unit>
</persistence>
